@model IEnumerable<GYMWebApp.DAL.Olcum>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Main.cshtml";
}



<p>
    @using (Html.BeginForm("Index", "Olcum", FormMethod.Post))
    {
        <table>
            <tr>
                <td><h3>@Html.ActionLink("Sporcuya Yeni Ölçümler Ekle", "Create")</h3></td>
                <th>
                    @*@Html.TextBox("Id", new SelectList(ViewBag.Sporcular, "Value", "Text"), htmlAttributes: new { @class = "form-control" })*@
                </th>

            </tr>

        </table>

    }

</p>
<table class="table">
    <tr>
        <th>
            ADI


        </th>
        <th>
            SOYADI


        </th>
        <th>
            ÖLÇÜM TİPİ

        </th>
        <th>
            ÖLÇÜM DEĞERİ

        </th>
        <th>
            ÖLÇÜM TARİHİ

        </th>
        <th>İŞLEMLER</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Sporcu.Adi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sporcu.Soyadi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OlcumTipi.OlcumTipi1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OlcumDegeri)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OlcumTarihi)
        </td>

        <td>
            <button type="button" class="bg-yellow">  @Html.ActionLink("Düzenle", "Update", new { id = item.Id }) </button>
            <button type="button" class="bg-red">@Html.ActionLink("Sil", "Delete", new { id = item.Id }) </button>
        </td>
    </tr>
}

</table>
